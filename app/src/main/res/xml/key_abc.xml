             android:keyWidth="13%p"/>
    </Row>

    <!-- Linha de CONTROLE -->
    <Row>
        <!-- Voltar para Poromongueta (sem label) -->
        <Key
            android:codes="-11"
            android:keyLabel="P M G"
            android:keyWidth="12%p"/>

        <!-- Números -->
        <Key
            android:keyLabel="\?\@1"
            android:codes="-12"/>



        <!-- Espaço -->
        <Key
            android:codes="32"
            android:keyLabel="␣"
            android:keyWidth="50%p"
            android:isRepeatable="false"/>

        <Key android:keyLabel="." android:codes="46" android:keyWidth="14%p" android:popupKeyboard="@xml/popup_symbols"  />

        <!-- Enter -->
        <Key android:keyLabel="↵"
             android:codes="-4"
             android:keyWidth="12%p"/>
    </Row>

