        <Key android:keyLabel="9" android:codes="57" android:keyWidth="9%p"/>
        <Key android:keyLabel="0" android:codes="48" android:keyWidth="10%p"/>
    </Row>

    <!-- Linha 1 -->
    <Row>
        <Key android:codes="113" android:keyLabel="q" android:keyWidth="9%p"/>
        <Key android:codes="119" android:keyLabel="w" android:keyWidth="10%p" android:popupKeyboard="@xml/popup_w"/>
        <Key android:codes="101" android:keyLabel="e" android:keyWidth="9%p" android:popupKeyboard="@xml/popup_e"/>
        <Key android:codes="114" android:keyLabel="r" android:keyWidth="10%p" android:popupKeyboard="@xml/popup_r"/>
        <Key android:codes="116" android:keyLabel="t" android:keyWidth="9%p" android:popupKeyboard="@xml/popup_t"/>
        <Key android:codes="121" android:keyLabel="y" android:keyWidth="10%p" android:popupKeyboard="@xml/popup_y"/>
        <Key android:codes="117" android:keyLabel="u" android:keyWidth="9%p" android:popupKeyboard="@xml/popup_u"/>
        <Key android:codes="105" android:keyLabel="i" android:keyWidth="10%p" android:popupKeyboard="@xml/popup_i"/>
        <Key android:codes="111" android:keyLabel="o" android:keyWidth="9%p" android:popupKeyboard="@xml/popup_o"/>
        <Key android:codes="112" android:keyLabel="p"/>
    </Row>

    <!-- Linha 2 -->
    <Row>
        <Key android:codes="97" android:keyLabel="a" android:keyWidth="10.10%p" android:popupKeyboard="@xml/popup_a"/>
        <Key android:codes="115" android:keyLabel="s" android:keyWidth="11.10%p" android:popupKeyboard="@xml/popup_s"/>
        <Key android:codes="100" android:keyLabel="d" android:keyWidth="11.10%p" android:popupKeyboard="@xml/popup_d"/>
        <Key android:codes="102" android:keyLabel="f" android:keyWidth="11.10%p"/>
        <Key android:codes="103" android:keyLabel="g" android:keyWidth="10.10%p" android:popupKeyboard="@xml/popup_g"/>
        <Key android:codes="104" android:keyLabel="h" android:keyWidth="11.10%p" android:popupKeyboard="@xml/popup_h"/>
        <Key android:codes="106" android:keyLabel="j" android:keyWidth="11.10%p" android:popupKeyboard="@xml/popup_j"/>
        <Key android:codes="107" android:keyLabel="k" android:keyWidth="11.10%p" android:popupKeyboard="@xml/popup_k"/>
        <Key android:codes="108" android:keyLabel="l" android:keyWidth="10.10%p" android:popupKeyboard="@xml/popup_l"/>
    </Row>

    <!-- Linha 3 -->
    <Row>
        <Key
            android:keyLabel="⇧"
            android:codes="-1"
            android:keyWidth="13%p"/>

        <Key android:codes="122" android:keyLabel="z" android:popupKeyboard="@xml/popup_z"/>
        <Key android:codes="120" android:keyLabel="x" android:popupKeyboard="@xml/popup_x"/>
        <Key android:codes="99" android:keyLabel="c" android:popupKeyboard="@xml/popup_c"/>
        <Key android:codes="118" android:keyLabel="v"/>
        <Key android:codes="98" android:keyLabel="b" android:popupKeyboard="@xml/popup_b"/>
        <Key android:codes="110" android:keyLabel="n" android:popupKeyboard="@xml/popup_n"/>
        <Key android:codes="109" android:keyLabel="m"/>

            <!-- DELETE -->
        <Key android:keyLabel="⌫"
             android:codes="-5"
             android:keyWidth="13%p"/>
    </Row>

    <!-- Linha de CONTROLE -->
    <Row>
        <!-- Voltar para Poromongueta (sem label) -->
        <Key
            android:codes="-11"
            android:keyLabel="P M G"
            android:keyWidth="12%p"/>

        <!-- Números -->
        <Key
            android:keyLabel="\?\@1"
            android:codes="-12"/>



        <!-- Espaço -->
        <Key
            android:codes="32"
            android:keyLabel="␣"
            android:keyWidth="50%p"
            android:isRepeatable="false"/>

        <Key android:keyLabel="." android:codes="46" android:keyWidth="14%p" android:popupCharacters=",!\?\@#:;"  />

        <!-- Enter -->
        <Key android:keyLabel="↵"
             android:codes="-4"
             android:keyWidth="12%p"/>
    </Row>

</Keyboard>
