    android:keyWidth="10%p"
    android:horizontalGap="2dp"
    android:verticalGap="2dp"
    android:keyHeight="50dp">

    <!-- Linha de NÚMEROS -->
    <Row>
        <Key android:keyLabel="1" android:codes="49" android:keyWidth="10%p"/>
        <Key android:keyLabel="2" android:codes="50" android:keyWidth="9%p"/>
        <Key android:keyLabel="3" android:codes="51" android:keyWidth="10%p"/>
        <Key android:keyLabel="4" android:codes="52" android:keyWidth="10%p"/>
        <Key android:keyLabel="5" android:codes="53" android:keyWidth="9%p"/>
